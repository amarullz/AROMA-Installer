  #-- Show Back Menu
  menubox(
    #-- Title
      "AROMA Dialog Demo",
    
    #-- Sub Title
      "Please select menu below to Test AROMA Dialog Demonstration.",
    
    #-- Icon
      "@alert",
      
    #-- Will be saved in /tmp/aroma/dialog_demo.prop
      "dialog_demo.prop",
      
    #-------------------------+-----------------[ Menubox Items ]-------------------------+---------------#
